##### ===== 设备平台 ===== #####
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7981=y
CONFIG_TARGET_mediatek_mt7981_DEVICE_jcg_q30pro=y

##### ===== 系统核心组件 ===== #####
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_wpad-basic-mbedtls=y
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=y
CONFIG_IPV6=y

##### ===== WiFi 驱动（MT7981 全功能） ===== #####
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_mt7981-dbdc-lite=y
CONFIG_PACKAGE_mtk-wifi=y
CONFIG_PACKAGE_mtwifi-cfg=y
CONFIG_PACKAGE_luci-app-mtwifi-cfg=y
CONFIG_PACKAGE_luci-i18n-mtwifi-cfg-zh-cn=y

##### ===== SSR Plus 核心组件 ===== #####
CONFIG_PACKAGE_luci-app-ssr-plus=y
CONFIG_PACKAGE_luci-i18n-ssr-plus-zh-cn=y

# Shadowsocks / ShadowsocksR
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Shadowsocks_Libev_Client=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_ShadowsocksR_Libev_Client=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Simple_Obfs=y

# Xray（Reality 必需）
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Xray=y
CONFIG_PACKAGE_xray-core=y

# Trojan
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Trojan=y
CONFIG_PACKAGE_trojan=y

# Sing-box（Hysteria2 / TUIC / REALITY）
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_SingBox=y
CONFIG_PACKAGE_sing-box=y

##### ===== TurboACC & FullConeNAT ===== #####
CONFIG_PACKAGE_luci-app-turboacc-mtk=y
CONFIG_PACKAGE_luci-i18n-turboacc-mtk-zh-cn=y

##### ===== 工具组件 ===== #####
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_tcping=y
CONFIG_PACKAGE_wget-ssl=y

##### ===== 文件系统与存储（建议保留） ===== #####
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-sdhci=y
