##### ===== 目标设备 ===== #####
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y

##### ===== LuCI 图形界面 ===== #####
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-network=y
CONFIG_PACKAGE_luci-mod-system=y
CONFIG_PACKAGE_luci-mod-status=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ssr-plus-zh-cn=y

##### ===== 网络基础 ===== #####
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_kmod-ipt-nat=y
CONFIG_PACKAGE_kmod-ipt-conntrack=y
CONFIG_PACKAGE_kmod-ipt-extra=y
CONFIG_PACKAGE_kmod-ipt-tproxy=y
CONFIG_PACKAGE_kmod-nf-tproxy=y
CONFIG_PACKAGE_kmod-tun=y

##### ===== IPv6（可关，省空间） ===== #####
# CONFIG_IPV6 is not set

##### ===== WiFi（K2P A2 必须） ===== #####
CONFIG_PACKAGE_kmod-mt7615d=y
CONFIG_PACKAGE_kmod-mt7615e=y
CONFIG_PACKAGE_kmod-mt7615-firmware=y
CONFIG_PACKAGE_wireless-regdb=y
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y

##### ===== SSR Plus ===== #####
CONFIG_PACKAGE_luci-app-ssr-plus=y

# Shadowsocks
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Shadowsocks_Libev_Client=y
CONFIG_PACKAGE_shadowsocks-libev-ss-local=y
CONFIG_PACKAGE_shadowsocks-libev-ss-redir=y
CONFIG_PACKAGE_shadowsocks-libev-config=y

# ShadowsocksR（兼容老协议）
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_ShadowsocksR_Libev_Client=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-local=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-redir=y

# Simple-Obfs
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Simple_Obfs=y
CONFIG_PACKAGE_simple-obfs=y

# Trojan（轻量）
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Trojan=y
CONFIG_PACKAGE_trojan=y

##### ===== 基础依赖 ===== #####
CONFIG_PACKAGE_libopenssl=y
CONFIG_PACKAGE_libmbedtls=y
CONFIG_PACKAGE_libsodium=y
CONFIG_PACKAGE_libpthread=y
CONFIG_PACKAGE_ca-certificates=y

##### ===== SSH ===== #####
CONFIG_PACKAGE_dropbear=y

##### ===== 禁用大体积组件 ===== #####
# Docker
# CONFIG_PACKAGE_docker is not set

# Sing-box / Xray / V2Ray
# CONFIG_PACKAGE_sing-box is not set
# CONFIG_PACKAGE_xray-core is not set
# CONFIG_PACKAGE_v2ray-core is not set

# USB / 存储
# CONFIG_PACKAGE_block-mount is not set
# CONFIG_PACKAGE_kmod-usb-storage is not set
