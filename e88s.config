# Target System
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7981=y
CONFIG_TARGET_mediatek_mt7981_DEVICE_generic=y

# Kernel Modules
CONFIG_PACKAGE_kmod-mt76=y    # Mediatek无线驱动
CONFIG_PACKAGE_kmod-mt76x2=y  # 802.11ac/ax 驱动支持
CONFIG_PACKAGE_kmod-tun=y     # VPN 和隧道协议支持
CONFIG_PACKAGE_kmod-usb-storage=y # USB存储支持
CONFIG_PACKAGE_kmod-fs-ntfs=y # NTFS文件系统支持
CONFIG_PACKAGE_kmod-usb3=y    # USB 3.0 支持

# Wireless Tools and Configuration
CONFIG_PACKAGE_wpad=y         # 完整版的无线协议支持（包括AP/STA模式）
CONFIG_PACKAGE_iw=y           # 用于配置和管理无线设备
CONFIG_PACKAGE_wireless-tools=y # 提供如iwconfig命令等工具
CONFIG_PACKAGE_hostapd-common=y  # Hostapd 支持

# Relayd for Wireless Bridging
CONFIG_PACKAGE_relayd=y       # Relayd中继守护进程
CONFIG_PACKAGE_luci-proto-relay=y # LuCI 中的 Relayd 支持

# File Systems and Storage
CONFIG_PACKAGE_block-mount=y  # 块设备挂载支持
CONFIG_PACKAGE_kmod-fs-ext4=y # ext4文件系统支持
CONFIG_PACKAGE_kmod-fs-vfat=y # VFAT (FAT32) 文件系统支持

# Network Services
CONFIG_PACKAGE_uhttpd=y         # LuCI 的 HTTP 服务器
CONFIG_PACKAGE_luci=y           # LuCI Web 管理界面
CONFIG_PACKAGE_luci-app-firewall=y # LuCI 防火墙管理

# System Utilities
CONFIG_PACKAGE_htop=y          # 系统进程查看工具
CONFIG_PACKAGE_ramfree=y       # 释放内存工具


# Additional LuCI Applications
CONFIG_PACKAGE_luci-app-travelmate=y # 旅行路由模式（增强无线中继管理）

# Network Utilities
CONFIG_PACKAGE_iptables-mod-ipopt=y  # IPtables 扩展，用于复杂防火墙规则
CONFIG_PACKAGE_ip-full=y             # 完整的 IP 工具集（包含路由管理功能）



# USB and External Drive Support
CONFIG_PACKAGE_usbutils=y       # USB 工具集

# Additional System Tools
CONFIG_PACKAGE_kmod-leds-gpio=y # GPIO LED 支持
CONFIG_PACKAGE_kmod-crypto-hw=y # 硬件加速的加密算法支持

# Diagnostics and Logging
CONFIG_PACKAGE_logd=y           # 系统日志守护进程
CONFIG_PACKAGE_luci-app-log=y   # LuCI 日志查看工具
CONFIG_PACKAGE_collectd=y       # 系统监控工具
CONFIG_PACKAGE_collectd-mod-cpu=y # CPU 监控模块
CONFIG_PACKAGE_collectd-mod-memory=y # 内存监控模块

# Performance Tuning
CONFIG_PACKAGE_irqbalance=y     # 平衡 CPU 中断处理
CONFIG_PACKAGE_luci-app-nlbwmon=y  # 网络流量监控
CONFIG_PACKAGE_tc-mod-iptables=y  # 流量控制扩展



# Additional Packages for Optimizing MT7981 Performance
CONFIG_PACKAGE_fullconenat=y    # Full-cone NAT 支持（提高 NAT 性能）
CONFIG_PACKAGE_kmod-ipt-raw=y   # 防火墙的原始表支持
