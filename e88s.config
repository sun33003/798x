# Target platform and device configuration
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7981=y
CONFIG_TARGET_ramips_mt7981_DEVICE_jcg_q30=y

# Include LuCI for web management
CONFIG_PACKAGE_luci=y

# Wireless drivers (open-source drivers)
CONFIG_PACKAGE_kmod-mt76x2e=y  # 2.4 GHz wireless driver
CONFIG_PACKAGE_kmod-mt7603e=y  # 5 GHz wireless driver

# Enable WDS (Wireless Distribution System) support for wireless bridging
CONFIG_PACKAGE_wpad=y  # Use wpad for WPA2/WPA3 support
CONFIG_PACKAGE_relayd=y  # Required for wireless repeater mode
CONFIG_PACKAGE_luci-proto-relay=y  # LuCI support for relay

# Wireless tools and utilities for better control
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y
CONFIG_PACKAGE_wireless-tools=y

