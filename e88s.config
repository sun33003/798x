# Target platform and device configuration
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_zte_e8820s=y

# Include LuCI for web management
CONFIG_PACKAGE_luci=y

# Wireless drivers (MTK proprietary drivers)
CONFIG_PACKAGE_kmod-mt7603e=y  # 2.4 GHz无线驱动
CONFIG_PACKAGE_kmod-mt76x2e=y  # 5 GHz无线驱动

# Enable WDS (Wireless Distribution System) support for wireless bridging
CONFIG_PACKAGE_kmod-mt7615e=y  # 如果需要额外驱动支持
CONFIG_PACKAGE_kmod-mt7615-firmware=y

# Wireless tools and utilities for better control
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_PACKAGE_wpad=y  # 无线客户端和AP管理
CONFIG_PACKAGE_hostapd-common=y


# Relayd for wireless repeater mode (无线中继必需)
CONFIG_PACKAGE_relayd=y
CONFIG_PACKAGE_luci-proto-relay=y

# USB support (if needed for additional storage or modem)
# CONFIG_PACKAGE_kmod-usb-core=y
# CONFIG_PACKAGE_kmod-usb2=y
# CONFIG_PACKAGE_kmod-usb-storage=y
# CONFIG_PACKAGE_block-mount=y  # 挂载存储设备

