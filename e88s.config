# 目标平台与设备配置
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7981=y
CONFIG_TARGET_mediatek_mt7981_DEVICE_jcg_q30=y


# 启用 LuCI Web 管理界面（精简版）
CONFIG_PACKAGE_luci=y

# 无线驱动（闭源 MediaTek 驱动）
CONFIG_PACKAGE_kmod-mt7981-wmac=y  # 2.4GHz 无线驱动
CONFIG_PACKAGE_kmod-mt7986e=y      # 5GHz 无线驱动

# 使用 wpad 以支持 WPA3 和 WDS
CONFIG_PACKAGE_wpad=y
CONFIG_PACKAGE_relayd=y  # 无线中继功能
CONFIG_PACKAGE_luci-proto-relay=y  # 在 LuCI 中支持中继

# 无线工具和调试
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y
CONFIG_PACKAGE_wireless-tools=y

# 闭源驱动支持
CONFIG_PACKAGE_mtk-closed=y
