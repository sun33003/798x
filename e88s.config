# Target platform and device configuration
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_zte_e8820s=y

# Include LuCI for web management
CONFIG_PACKAGE_luci=y

# Wireless drivers (MTK proprietary drivers)
CONFIG_PACKAGE_kmod-mt7603e=y  # 2.4 GHz无线驱动
CONFIG_PACKAGE_kmod-mt76x2e=y  # 5 GHz无线驱动

# Enable WDS (Wireless Distribution System) support for wireless bridging
CONFIG_PACKAGE_wpad-basic-wolfssl=y  # 推荐用 wpad-basic-wolfssl 以支持 WDS
CONFIG_PACKAGE_kmod-mt7615e=y  # 如果需要额外驱动支持
CONFIG_PACKAGE_kmod-mt7615-firmware=y

# Wireless tools and utilities for better control
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_PACKAGE_wpad=y  # 无线客户端和AP管理
CONFIG_PACKAGE_hostapd-common=y

# Networking tools and firewall settings
CONFIG_PACKAGE_opkg=y  # 包管理工具
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_kmod-nf-conntrack=y
CONFIG_PACKAGE_kmod-nf-nathelper=y

# Relayd for wireless repeater mode (无线中继必需)
CONFIG_PACKAGE_relayd=y
CONFIG_PACKAGE_luci-proto-relay=y

# USB support (if needed for additional storage or modem)
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_block-mount=y  # 挂载存储设备

# Filesystem support for external storage (optional)
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y

# Miscellaneous utilities
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_swconfig=y  # 交换机配置工具

# Remove unnecessary packages to save space (根据需求调整)
# CONFIG_PACKAGE_ppp is not set
# CONFIG_PACKAGE_ppp-mod-pppoe is not set
# CONFIG_PACKAGE_ipv6-helpers is not set

CONFIG_PACKAGE_luci-app-xlnetacc=n
CONFIG_PACKAGE_luci-app-vlmcsd=n
CONFIG_PACKAGE_luci-app-zerotier=n
CONFIG_PACKAGE_luci-app-ipsec-vpnd=n
CONFIG_PACKAGE_luci-app-unblockmusic=n
CONFIG_PACKAGE_luci-app-wireguard=n
CONFIG_PACKAGE_luci-app-adbyby-plus=n
CONFIG_PACKAGE_luci-app-upnp=n
CONFIG_PACKAGE_luci-app-wol=n
CONFIG_PACKAGE_luci-app-accesscontrol=n
CONFIG_PACKAGE_luci-app-ddns=n
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-vsftpd=n
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_luci-app-frpc=n
CONFIG_PACKAGE_nlbwmon=n
CONFIG_PACKAGE_luci-app-nlbwmon=n
CONFIG_PACKAGE_luci-app-statistics=n
CONFIG_PACKAGE_luci-app-webadmin=n
CONFIG_PACKAGE_luci-app-wrtbwmon=n

