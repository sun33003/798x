##### ===== 设备平台 ===== #####
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7981=y
CONFIG_TARGET_mediatek_mt7981_DEVICE_jcg_q30pro=y

CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_LUCI_LANG_zh_Hans=y


CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ipset=y

CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_kmod-ipt-nat=y

CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-nat=y
CONFIG_PACKAGE_kmod-nft-compat=y


##### ===== WiFi 驱动（MT7981 全功能） ===== #####
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_mt7981-dbdc-lite=y
CONFIG_PACKAGE_mtk-wifi=y
CONFIG_PACKAGE_mtwifi-cfg=y
CONFIG_PACKAGE_luci-app-mtwifi-cfg=y
CONFIG_PACKAGE_luci-i18n-mtwifi-cfg-zh-cn=y

CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_dnsmasq-full=n
CONFIG_PACKAGE_smartdns=n



##### ===== SSR Plus 核心组件 ===== #####
CONFIG_PACKAGE_luci-app-ssr-plus=y

# 只启用需要的内核
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Xray=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_SingBox=y

# 关闭所有老旧 / 体积协议
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Shadowsocks_Libev_Client=n
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_ShadowsocksR_Libev_Client=n

# 主内核：全主流协议
CONFIG_PACKAGE_xray-core=y

# 仅为 Hysteria2
CONFIG_PACKAGE_sing-box=y
# 老内核
CONFIG_PACKAGE_v2ray-core=n

# 体积杀手
CONFIG_PACKAGE_clash=n
CONFIG_PACKAGE_luci-app-openclash=n
CONFIG_PACKAGE_luci-app-passwall=n

# 容器
CONFIG_PACKAGE_docker=n
CONFIG_PACKAGE_dockerd=n

# LuCI 杂项
CONFIG_PACKAGE_luci-app-ddns=n
CONFIG_PACKAGE_luci-app-upnp=n
CONFIG_PACKAGE_luci-app-samba4=n
CONFIG_PACKAGE_luci-app-hd-idle=n
CONFIG_PACKAGE_luci-app-wol=n
